@model CategoryModel
@{
    ViewBag.Title = "Create category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create category</h2>
<div class="row">
    <section>
        @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextAreaFor(m => m.Description, new { @class = "tinymce-text-area", rows = "13" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ImagePath, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    <input type="file" name="file" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        }
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}